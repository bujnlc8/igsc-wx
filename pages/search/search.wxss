.wx_search {
  z-index: 999;
}

.wx_search_title {
  display: block;
  padding-left: 1.5px;
  font-size: 10px;
  text-align: left;
}

.wx_search_mind_key_item {
  padding: 5px 1.5px 5px 8px;
  margin-left: 5px;
  display: flex;
  font-size: 10px;
}

.wx_search_key_list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 0.5px solid #f3f3f2;
}

.wx_search_key_item {
  flex: 0 0 20%;
  font-size: 10px;
  text-align: center;
  margin: 5px;
  padding: 2px;
  border-radius: 5px;
  background-color: #c8c8c84d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  cursor: pointer;
}

.wx_search_history_item {
  padding-left: 1.5px;
  padding-right: 6px;
  display: flex;
  margin-bottom: -5px;
}

.wx_search_history_item_title {
  flex: 8;
  font-size: 10px;
}

.wxSearchHistoryItemDel {
  flex: 1;
  font-size: 10px;
  text-align: center;
  padding-top: 1px;
  padding-bottom: 1px;
  border: 0.5px solid #f3f3f2;
  border-radius: 1px;
}

.weui-search-bar {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}

.weui-icon-search {
  margin-right: 6px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 4px;
  top: 6.5px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 16px;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  background: #fff;
  border-radius: 16px;
  border: 0.5px dashed #617172;
  height: 31px;
}

.weui-search-bar__form:hover {
  border: 0.5px solid #a61b29;
  color: #a61b29;
}

.weui-search-bar__form:focus {
  border: 0.5px dashed #7c4b00;
  background-color: #fff;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 10px;
  padding-right: 10px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 31px;
  line-height: 31px;
  padding-right: 31px;
  caret-color: #617172;
  font-size: 15px;
}

.weui-icon-clear {
  z-index: 999999;
  position: absolute;
  top: 0px;
  right: 0px;
  font-size: 0;
  width: 31px;
  height: 31px;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 1.5px;
  text-align: center;
  background: #fff;
  line-height: 15px;
}

.weui-search-bar__cancel-btn {
  margin-left: 5px;
  line-height: 31px;
  white-space: nowrap;
  font-size: 15px;
  height: 31px;
  border-radius: 16px;
  width: 44px;
  text-align: center;
  border: 0.5px dashed #617172;
  padding: 0px 1.5px 0px 1.5px;
  color: #617172;
  background-color: #fff;
  cursor: pointer;
}

.weui-search-bar__cancel-btn:hover {
  border: 0.5px solid #a61b29;
  color: #a61b29;
  background-color: #fff;
}

.search_radio {
  color: #617172;
  margin-right: 5px;
  transform: scale(0.8);
}

.placeholder {
  color: #617172;
  font-size: 15px;
}
